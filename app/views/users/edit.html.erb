<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this user from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_Name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"user_Name", class: "form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
         <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user_image"%>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class: "form-control introduction" %>
      </div>
      <div class="form-group">
          <%= f.submit "Update User" ,class: "btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>